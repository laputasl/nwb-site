<%= render :partial => 'admin/shared/configuration_menu' %>

<h1>Suspicious Order Settings</h1>

<% form_tag(admin_suspicious_order_settings_path, :method => :put) do -%>

  <p>
    <label>Hold all orders with total amount exceeding:</label>
    <%= text_field_tag('preferences[hold_order_amount_over]',  Spree::Config[:hold_order_amount_over]) %>
  </p>

  <p>
    <label>Hold all orders where shipping country is NOT listed in:</label>
    <%= text_field_tag('preferences[hold_order_ship_countries]',  Spree::Config[:hold_order_ship_countries]) %>
    <span style="color:grey;">(Comma separated list of ISO3 country codes)</span>
  </p>

  <p>
    <label>Hold all orders where the returned AVS Code is NOT listed in:</label>
    <%= text_field_tag('preferences[hold_order_with_avs]',  Spree::Config[:hold_order_with_avs]) %>
    <span style="color:grey;">(Comma separated list of AVS codes)</span>
  </p>

  <p class="form-buttons">
    <%= button t('update') %>
    <%= t("or") %> <%= link_to t("cancel"), admin_configurations_url %>
  </p>
<% end -%>
