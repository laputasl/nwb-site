<div id="orders_dashboard" class="dashboard_main">
  <div class="dashboard_main_wrapper">
    <h2>Problem Orders (<%= @problem_orders.size %>)</h2>
    <table class="nwb_dashboard_table">
      <thead>
        <tr>
          <th><%= t('order_date') %></th>
          <th><%= t('order_number') %></th>
          <th><%= t('status') %></th>
          <th><%= t('customer') %></th>
          <th><%= t("total") %></th>
          <th><%= t('store') %></th>
        </tr>
      </thead>
      <tbody>
        <% @problem_orders.each do |order| %>
          <tr>
            <td><%= order.created_at.to_date %></td>
            <td><%= link_to order.number, admin_order_url(order) %></td>
            <td><%= t(order.state.downcase) %></td>
            <td><%= order.email %></td>
            <td><%= number_to_currency order.total %></td>
            <td><%= order.store.code.upcase %></td>
          </tr>
        <% end %>
        <% if @problem_orders.empty? %>
          <tr>
            <td colspan="6">No active problem orders found.</td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <h2>Vancouver Orders (<%= @vancouver_orders.size %>)</h2>
    <table class="nwb_dashboard_table">
      <thead>
        <tr>
          <th><%= t('order_date') %></th>
          <th><%= t('order_number') %></th>
          <th><%= t('status') %></th>
          <th><%= t('customer') %></th>
          <th><%= t("total") %></th>
          <th><%= t('store') %></th>
        </tr>
      </thead>
      <tbody>
        <% @vancouver_orders.each do |order| %>
          <tr>
            <td><%= order.created_at.to_date %></td>
            <td><%= link_to order.number, admin_order_url(order) %></td>
            <td><%= t(order.state.downcase) %></td>
            <td><%= order.email %></td>
            <td><%= number_to_currency order.total %></td>
            <td><%= order.store.code.upcase %></td>
          </tr>
        <% end %>
        <% if @vancouver_orders.empty? %>
          <tr>
            <td colspan="6">No Vancouver orders found.</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<% content_for :head do %>
  <style>
    .nwb_dashboard_table{
      border:1px solid #DDDDDD;
      border-top:none;
    }
    .nwb_dashboard_table th {
      background-color:#0095DA;
      color:#FFFFFF;
    }
    .nwb_dashboard_table tbody{
      height:215px;
      overflow-x: hidden;
    }

    .nwb_dashboard_table tbody td{
      border-bottom:1px solid #DDDDDD;
    }
  </style>
<% end %>