<% unless @exact_target_lists.blank? %>
  <%- @subscribe = @checkout.order.user.nil? ? true : !@checkout.order.user.exact_target_lists.include?(@exact_target_lists.first.id) -%>
  <p id="snewsletters" class="field">
    <label>Opt-in to our newsletter:</label>
    <%= radio_button_tag("exact_target_list[#{@exact_target_lists.first.id}]", true, @subscribe, :style => "width:20px;") %>
    <span style="float:left;"><%= t("yes") %>&nbsp;</span>

    <%= radio_button_tag("exact_target_list[#{@exact_target_lists.first.id}]", false, !@subscribe, :style => "width:20px;") %>
   <span style="float:left;"><%= t("no") %></span>
  </p>
<% end %>


