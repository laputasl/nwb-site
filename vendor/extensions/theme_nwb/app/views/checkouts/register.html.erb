<% @body_id = 'signup' %>

<%= error_messages_for :user %>
<%= error_messages_for :checkout %>

<div class="register-login">
  <div class="left">
    <div id="guest_checkout">
       <%= render 'guest_checkout' %>
    </div>
  </div>

  <div class="right">
    <div id="new-customer">
      <h2><%= t("new_customer") %></h2>

      <% form_for(User.new) do |f| %>
        <div style="text-align:right;">
          <%= render 'shared/user_form', :f => f %>
        </div>
        <div class="button_wrapper">
          <%= image_submit_tag "/#{@site.code}/images/button_next.gif" %>
        </div>
      <% end %>
    </div>
    <br />
    <div id="new-customer">
      <h2>Express Checkout for Repeat Customers</h2>
      <%= render 'shared/login' %>
    </div>
  </div>

  <div style="text-align:center;clear:both;">
    <p style="padding-top:15px;">
      <span style="color:red;">*</span> mandatory field
    </p>
    <%= link_to "Privacy Policy", "/#{@site.code}/privacy_policy" %>
  </div>
</div>
