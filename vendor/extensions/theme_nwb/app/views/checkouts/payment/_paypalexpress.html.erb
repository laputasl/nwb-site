<a id="ppx_payment" href="<%= paypal_payment_order_checkout_url @order, :payment_method_id => payment_method %>" style="text-align: center;">
  <img src="/<%=@current_domain%>/images/btn-submit-paypal.gif" style="margin-left:125px;"/>
</a>

<script type="text/javascript">
  jQuery(document).ready(function(){
    $("a#ppx_payment").click(function(){
      var url = $(this).attr("href");

      url += "&shipping_method=" + $("select[name='checkout[shipping_method_id]']").val();
      window.location = url;
      return false;
    });
  });
</script>
