<div class="register-login" style="text-align:right;">
  <% form_tag user_session_path do  %>
    <p>If you have shopped with us previously, please sign in here.</p>
    <p>
      E-mail Address<span style="color:red;">*</span>: <%= text_field :user_session, 'login' %>
    </p>
    <p>
      Password<span style="color:red;">*</span>: <%= password_field :user_session, 'password' %>
    </p>
    <div class="button_wrapper">
      <%= image_submit_tag "/#{@site.code}/images/button_signin.gif" %>
      <br/><br/>
      <%= link_to "Forgot your password?", new_password_reset_path %>
    </div>
  <% end %>
</div>
