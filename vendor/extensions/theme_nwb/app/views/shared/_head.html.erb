<title><%= title %></title>
<meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
<%= stylesheet_link_tag "/stylesheets/#{@current_domain}.css" %>
<%= stylesheet_link_tag "/stylesheets/#{@current_domain}_print.css", :media=> "print"%>
<%= stylesheet_link_tag "/stylesheets/#{@current_domain}_gwo.css" %>
<%= javascript_include_tag 'jquery-1.3.2.min', 'jquery.validate.min.js', :cache => 'jquery-core' %>
<% unless I18n.locale.to_s[0..1] == 'en' -%>
  <%= javascript_include_tag ['localization/messages_', I18n.locale.to_s[0..1], '.js'].join %>
<% end -%>
<% if  @current_controller == "home_page" %>
  <meta name="description" content="<%= Spree::Config["#{@site.code}_homepage_description"] %>">
<% else %>
  <%= meta_data_tags %>
<% end %>
<%= meta_skip %>

<% unless request.ssl? %>
  <% if @site.code == "pwb" %>
    <script type="text/javascript">
    var pr_style_sheet="http://cdn.powerreviews.com/aux/10926/4478/css/express.css";
    </script>
    <script type="text/javascript" src="http://cdn.powerreviews.com/repos/10926/pr/pwr/engine/js/full.js"></script>
  <% else %>
    <script type="text/javascript">
    var pr_style_sheet="http://cdn.powerreviews.com/aux/10964/1570/css/express.css";
    </script>
    <script type="text/javascript" src="http://cdn.powerreviews.com/repos/10964/pr/pwr/engine/js/full.js"></script>
  <% end %>
<% end %>

<%= yield :head %>