<% content_for :breadcrumbs do %>
  <div class="banner" id="homeBanner">
    <h2>&ldquo;Prevention is the best cure for your pet's health&rdquo;</h2>
  </div>
  <ul id="breadcrumbs"><li>Your location: Pet WellBeing</li></ul>
<% end %>

<%= render_snippet('pwb-homepage-header') %>

<hr />
<div class="products">
  <h1>Top Selling Dog Supplies</h1>
  <ul class="productList">
    <% @best_selling_dogs.each do |product| %>
      <%= render "product", :product => product, :products => @best_selling_dogs %>
    <% end %>
  </ul>
  <h1>Top Selling Cat Supplies</h1>
  <ul class="productList">
    <% @best_selling_cats.each do |product| %>
      <%= render "product", :product => product, :products => @best_selling_cats %>
    <% end %>
  </ul>
</div>

<%= render_snippet('pwb-homepage-footer') %>