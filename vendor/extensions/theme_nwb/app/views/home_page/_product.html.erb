<li class="<%= ((products.size - products.index(product)) < (3 - (products.size % 2))) ? "" : "border" %>">
  <%= link_to small_image(product, {:style => "max-width:70px;"}), product, {:class => "photo"} %>
  <div class="info">
    <h2><%= link_to truncate(product.name, 26), product, :title => product.name %></h2>
    <p class="itemNum">Item # <%= product.sku %></p>
    <p class="description"><%= product.short_home %></p>
  </div>
  <p class="more"><%= link_to "More Product Info &raquo;", product, :title =>"More Product Info &raquo;" %></p>
  <div class="rating">
    <script type="text/javascript">
    var pr_snippet_min_reviews=1;
    POWERREVIEWS.display.snippet(document, { pr_page_id : "<%= product.legacy_id %>" });
    </script>

  </div>
  <div class="price">
    <p><strong>Save: <%= number_to_currency(product.base_price - product.price) %><br />Price: <%= product_price(product) %></strong></p>
    <% form_for :order, :url => orders_url do |f| %>
      <fieldset>
        <%= buy_button(product, "btnBuyNow") %>
      </fieldset>
    <% end %>
  </div>
</li>