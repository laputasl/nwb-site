<% content_for :breadcrumbs do %>
  <% if @site.code == "pwb" %>
    <% if @taxon.id == 3001 || @taxon.ancestors.any? {|t| t.id == 3001 } %>
      <%= image_tag "/#{@current_domain}/images/banner-dog-supplies.jpg", :alt => "PetWellbeing.com : Dog Supplies" %>
    <% elsif @taxon.id == 3002 || @taxon.ancestors.any? {|t| t.id == 3002 } %>
      <%= image_tag "/#{@current_domain}/images/banner-cat-supplies.jpg", :alt => "PetWellbeing.com : Cat Supplies" %>
    <% end %>
  <% end %>
  <%= breadcrumbs(@taxon) %>
<% end %>

<% if @current_domain != @site.code && !@taxon.cross_sell.nil? %>
  <div class="content">
    <%= @taxon.cross_sell %>
  </div>
<% end %>

<% unless @taxon.description.nil? %>
  <div class="content description">
    <%= @taxon.description %>
  </div>
<% end %>
<div class="products">
  <h1><%= taxon_header(@taxon) %></h1>
  <%= render :partial => "shared/products", :locals => {:products => @products, :taxon => @taxon } %>
</div>
<% unless @taxon.footer.nil? %>
  <div class="content footer">
    <%= @taxon.footer %>
  </div>
<% end %>