<div class="product">
  <div class="photo">
    <%= product_image(@product, {:style => "max-width:140px;"}) %>
    <p class="itemNum">
      Item # <%= @product.sku %><br />
      In Stock: <%= @product.has_stock? ? "Yes" : "No" %>
    </p>
  </div>
  <div class="info">
    <h2><%= link_to @product.name, @product, :title => @product.name %></h2>
    <p><%= @product.subtitle_main %></p>
    <p><%= @product.sales_copy %></p>
  </div>
  <div class="price">
    <%= render "pwb_pricing" %>
  </div>
  <div class="rateShare">
    <div class="rating">
      <div class="pr_snippet_product">
        <script type="text/javascript">
        var pr_snippet_min_reviews=1;
        POWERREVIEWS.display.snippet(document, { pr_page_id : "<%= @product.legacy_id %>" });
        </script>
      </div>
    </div>
    <div class="share">
      <p><strong>Share This</strong></p>
      <a href="http://www.addthis.com/bookmark.php" onclick="addthis_url   = location.href; addthis_title = document.title; return addthis_click(this);"><img src="/<%= @site.code %>/images/icon_plus.gif" alt="Bookmark and Share" /></a>
      <a href="http://www.addthis.com/bookmark.php" onclick="addthis_url   = location.href; addthis_title = document.title; return addthis_click(this);">Bookmark &amp; Share</a>
      <script type="text/javascript" src="http://s7.addthis.com/js/widget.php?v=10"></script>
    </div>
  </div>
</div>
<div class="productDetails">
  <ul class="productMenu">
    <li class="active"><a id="tabDescription" href="#description" title="Description">Description</a></li>
    <li><a id="tabReviews" href="#reviews" title="Reviews">Reviews</a></li>
    <li><a id="tabDirections" href="#directions" title="Dosage &amp; Directions">Dosage &amp; Directions</a></li>
    <li><a id="tabIngredients" href="#ingredients" title="Ingredients">Ingredients</a></li>
  </ul>
  <div id="Description" class="content">
    <a name="description" />
    <h3>Description</h3>
    <%= @product.description %>
    <p class="right"><a href="#" title="Back to Top &raquo;">Back to Top &raquo;</a></p>

    <a name="reviews" />
    <h3>Reviews</h3>
    <div class="pr_review_summary">
      <script type="text/javascript">
        POWERREVIEWS.display.engine(document, { pr_page_id : "<%= @product.legacy_id %>" });
      </script>
    </div>
    <p class="right"><a href="#" title="Back to Top &raquo;">Back to Top &raquo;</a></p>

    <a name="directions" />
    <h3>Dosage &amp; Directions</h3>
    <%= @product.dosage %>
    <p class="right"><a href="#" title="Back to Top &raquo;">Back to Top &raquo;</a></p>

    <a name="ingredients" />
    <h3>Ingredients</h3>
    <%= @product.ingredients %>
    <p class="right"><a href="#" title="Back to Top &raquo;">Back to Top &raquo;</a></p>
  </div>
</div>
<div class="product">
  <div class="price">
    <%= render "pwb_pricing" %>
  </div>
</div>